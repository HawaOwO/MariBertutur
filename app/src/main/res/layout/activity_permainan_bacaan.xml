<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7FD7FE"
    android:padding="24dp"
    tools:context=".Permainan_Bacaan">

    <TextView
        android:id="@+id/jumlahSoalan"
        android:layout_width="192dp"
        android:layout_height="28dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="monospace"
        android:text="Jumlah Soalan: "
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/questionReadingGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="10dp"
        android:text="This is the question of reading game"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="190dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/answerOneRead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="-185dp"
        android:backgroundTint="#DD9687"
        android:text="A"
        android:textColor="#FFFFFF"  />

    <Button
        android:id="@+id/answerTwoRead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="-185dp"
        android:backgroundTint="#DD9687"
        android:text="B" />


    <Button
        android:id="@+id/answerThreeRead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#DD9687"
        android:text="C" />

    <Button
        android:id="@+id/answerFourRead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#DD9687"
        android:text="D" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="190dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="190dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="190dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/menu"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#495ED3"
        android:text="Kembali ke Menu"
        android:textAlignment="center"
        android:textColor="#FFFFFF"  />

    <Button
        android:id="@+id/next"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:layout_above="@+id/menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#689E38"
        android:text="Submit" />
</RelativeLayout>